<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.geniusvjr.geniusnote"
          xmlns:android="http://schemas.android.com/apk/res/android">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.NavigationViewActivity"
                  android:label="@string/title_activity_navigation_view"
                  android:theme="@style/Theme.DesignDemo"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.WorldActivity"
                  android:theme="@style/Theme.DesignDemo">

        </activity>
        <activity android:name=".ui.NoteActivity"
                  android:windowSoftInputMode="adjustResize">

        </activity>
        <activity android:name=".ui.DisplayActivity">

        </activity>
    </application>

</manifest>
